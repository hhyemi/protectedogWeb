<?xml version="1.0" encoding="UTF-8" ?>

<!DOCTYPE configuration
 		 PUBLIC "-//mybatis.org//DTD Config 3.0//EN"
 		"http://mybatis.org/dtd/mybatis-3-config.dtd">
  						
<!--	mybatis-config.xml :: MyBatis Framework  MetaData -->
<configuration>

	<!-- 기타 설정정보 :: [MyBatis_Home]/mybatis-3.2.1.pdf 참조 -->
	<settings>
		<setting name="callSettersOnNulls" value="false"/>
	</settings>	
	
	<!-- FQCN(Full Qualified Class Name) Alias(별칭관리) -->
	<typeAliases>
		<typeAlias alias="adopt" type="org.protectedog.service.domain.Adopt" />
		<typeAlias alias="apply" type="org.protectedog.service.domain.Apply" />
		<typeAlias alias="board" type="org.protectedog.service.domain.Board" />
	</typeAliases>
	
	 <!-- SQL Definition :: file include -->
	<mappers>
		<mapper resource="sql/AdoptMapper.xml"/>
		<mapper resource="sql/ApplyMapper.xml"/>
		<mapper resource="sql/BoardMapper.xml"/>
	</mappers>

</configuration>